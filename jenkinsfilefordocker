node{
stage ('scm checkout') {
git 'https://github.com/uttamrao/maven-project.git'
}
stage ('package stage') {
sh label: '', script: 'mvn clean package '

}
stage ('docker image build') {
sh 'docker build -t abhoyar9/amit1:1.0.0 .'
}
stage ('Push Docker image to DockerHub') {
withCredentials([string(credentialsId: 'dockerhub1', variable: 'dockerhub1')]) {
sh "docker login -u abhoyar9 -p ${dockerhub1}"
}
sh 'docker push abhoyar9/amit1:1.0.0'
}
stage ('Deploy to Dev') {
def dockerRun = 'docker run -d -p 9000:8080 --name my-tomcat-app5 abhoyar9/amit1:1.0.0'
sshagent(['amit1']) {
sh "ssh -o StrictHostKeyChecking=no ec2-user@172.31.39.151 ${dockerRun}"
}
}
}




